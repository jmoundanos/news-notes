{{#each articles}}
<div class="card">
    <div class="card-header bg-primary">
        <div class="header-left">
            <h3 class="articleTitle">{{title}}</h3>
        </div>
    </div>
    <div class="card-body">
        <div class="body-left">
            <!--<img src="{{this.image}}" class="article-img" height="150">-->
        </div>
        <div class="body-right">
          {{!-- <p class="summary">{{this.summary}}</p> --}}
            <a href="{{link}}" target="_blank">
                <p class="articleLink">{{link}}</p>
            </a>
            <h5>Notes</h5>
            <p class="noteArea"></p>
            <button class="addNote" data-id="{{_id}}">Add Note</button>
            </div>
    </div>
</div>
<br>
{{/each}}